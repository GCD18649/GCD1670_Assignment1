
@{
    ViewBag.Title = "Create";
}

<h2>Create a new Category</h2>

<form>
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" placeholder="Lubo Category" />
    </div>
    <div class="form-group">
        <label>Description</label>
        <input type="text" class="form-control" placeholder="Lubo Description" />
    </div>   
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>